# Enable URL rewriting
RewriteEngine On

# Don't apply rules to existing directories or files
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

# Internally rewrite extensionless URLs to .php
RewriteRule ^([^/]+)/?$ $1.php [L]

# (Optional) Redirect .php requests to clean URLs â€” ONLY for GET requests
RewriteCond %{REQUEST_METHOD} GET
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]
